@model IEnumerable<CompanyProject.Data.Models.Employee>

@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<p>
    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AddEmployee">Add Employee</a>
</p>

<div class="content">
    <div class="container d-flex">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-auto col-md-auto">
                    <div class="card card-box p-5">
                        <div class="thumb-lg member-thumb mx-auto"><img width="100px" style="border-radius: 50%" src="data:image/png;base64, @Html.DisplayFor(modelItem => item.Image)" /></div>
                        <div class="card-body">
                            <div class="d-flex ">
                                <p class="card-text">@Html.DisplayNameFor(model => model.Surname)</p>
                                <p class="card-text ps-3">@Html.DisplayFor(modelItem => item.Surname)</p>
                            </div>
                            <div class="d-flex">
                                <p class="card-text">@Html.DisplayNameFor(model => model.Name)</p>
                                <p class="card-text ps-3">@Html.DisplayFor(modelItem => item.Name)</p>
                            </div>
                            <div class="d-flex">
                                <p class="card-text">@Html.DisplayNameFor(model => model.Email)l</p>
                                <p class="card-text ps-3">@Html.DisplayFor(modelItem => item.Email)</p>
                            </div>
                            <div class="d-flex">
                                <p class="card-text">@Html.DisplayNameFor(model => model.UserName)</p>
                                <p class="card-text ps-3">@Html.DisplayFor(modelItem => item.UserName)</p>
                            </div>
                            <div class="d-flex">
                                <p class="card-text">@Html.DisplayNameFor(model => model.Birth)</p>
                                <p class="card-text ps-3">@Html.DisplayFor(modelItem => item.Birth)</p>
                            </div>
                        </div>
                        <div class="card-body d-flex justify-content-center">
                            <a class="ps-3" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a class="ps-3" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a class="ps-3" asp-action="DeleteUser" asp-route-id="@item.Id">Delete</a>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>